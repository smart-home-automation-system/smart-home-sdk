<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<profiles version="1">
	<profile kind="CodeFormatterProfile" name="Custom" version="2">
		<!-- USUŃ PUSTE LINIE -->
		<!-- Maksymalna liczba pustych linii do zachowania -->
		<setting id="org.eclipse.jdt.core.formatter.number_of_empty_lines_to_preserve" value="0"/>
		<setting id="org.eclipse.jdt.core.formatter.blank_lines_before_method" value="1"/>
		<setting id="org.eclipse.jdt.core.formatter.blank_lines_before_new_chunk" value="1"/>
		<setting id="org.eclipse.jdt.core.formatter.blank_lines_before_first_class_body_declaration" value="1"/>


		<!-- Nowa linia PO adnotacji na metodzie (TAK - każda adnotacja w osobnej linii) -->
		<setting id="org.eclipse.jdt.core.formatter.insert_new_line_after_annotation_on_method" value="insert"/>

		<!-- Usuń puste linie między adnotacjami -->
		<setting id="org.eclipse.jdt.core.formatter.blank_lines_between_annotation_and_type" value="0"/>

		<setting id="org.eclipse.jdt.core.formatter.alignment_for_enum_constants" value="49"/>


		<!-- Inne przydatne ustawienia -->
		<setting id="org.eclipse.jdt.core.formatter.tabulation.char" value="space"/>
		<setting id="org.eclipse.jdt.core.formatter.tabulation.size" value="4"/>
		<setting id="org.eclipse.jdt.core.formatter.lineSplit" value="120"/>


	</profile>
</profiles>
